{
    "name": "yoga-layout",
    "version": "1.0.0",

    "main": "./sources/entry-node",
    "browser": "./sources/entry-browser",

    "scripts": {

        "which": "which",
        "autogypi": "autogypi",
        "node-gyp": "node-gyp",
        "emcc-path": "emcc-path",

        "is-monolithic": "test \"$(basename \"$(pwd)\")\" = javascript",
        "copy-sources": "! npm -- run is-monolithic || (rsync -r --checksum --delete ../yoga/ sources/yoga/)",

        "build:native": "npm -- run copy-sources && npm -- run node-gyp configure build",
        "build:asmjs": "npm -- run copy-sources && npm -- run node-gyp configure build --asmjs=1",
        "build:browser": "webpack",
        "build:all": "npm -- run build:native && npm -- run build:asmjs && npm -- run build:browser",
        "build": "npm -- run build:all",

        "test:native": "TEST_ENTRY=node time mocha --expose-gc -r tests/tools.js tests/Facebook.Yoga/**/*.js",
        "test:asmjs": "TEST_ENTRY=browser time mocha --expose-gc -r tests/tools.js tests/Facebook.Yoga/**/*.js",
        "test:all": "npm -- run test:native && npm -- run test:asmjs",
        "test": "npm -- run test:all",

        "install": "npm -- run autogypi && npm -- run build:native"

    },

    "dependencies": {

        "autogypi": "^0.2.2",
        "nbind": "^0.3.8",
        "node-gyp": "^3.4.0"

    },

    "devDependencies": {

        "mocha": "^3.2.0",
        "webpack": "^2.2.0-rc.2"

    }
}
